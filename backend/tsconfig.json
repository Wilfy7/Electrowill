{
  "compilerOptions": {
    "target": "ES2020",                // Output JavaScript version
    "module": "commonjs",              // Node uses CommonJS modules
    "rootDir": "./src",                // Where your TS code lives
    "outDir": "./dist",                // Where compiled JS will go
    "strict": true,                    // Enable strict type checking
    "esModuleInterop": true,           // Allow default imports from CJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],                  // Files to compile
  "exclude": ["node_modules"]          // Ignore node_modules
}

